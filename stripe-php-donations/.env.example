APP_ENV=local
APP_DEBUG=true

# IMPORTANT:
# If you run via XAMPP under /stripe-php-donations/public, set APP_URL exactly like this:
APP_URL=http://localhost/stripe-php-donations/public

# Stripe (leave empty for dev preview mode)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Donation defaults
DONATION_CURRENCY=eur
MIN_DONATION_EUR=1

# MySQL
DB_HOST=127.0.0.1
DB_NAME=donations
DB_USER=root
DB_PASS=

# Optional (Heroku-style):
# DATABASE_URL=mysql://user:pass@host:3306/dbname
